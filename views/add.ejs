    <script type="text/javascript">

      function radioselect(val){
        if(val==0){
        document.getElementById("pic").hidden="";
        document.getElementById("link").hidden="true";

      }else{
        document.getElementById("pic").hidden="true";
        document.getElementById("link").hidden="";

